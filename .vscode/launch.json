{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "name": "Debug Frontend in Firefox",
      "url": "http://localhost:8000/fe/index.html", // Adjust if your frontend runs elsewhere
      "webRoot": "${workspaceFolder}/fe",
      "reloadOnAttach": true
    },
    {
      "name": "Python Debugger: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "fastapi",
      "args": ["dev", "src/main.py"],
      "jinja": true,
      "python": "${workspaceFolder}/.venv/Scripts/python.exe" // Adjust path if needed
    }
  ]
}
